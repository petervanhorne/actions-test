! Create a python3 virtual environment
! Find python3 versions on the ADS machine

ls /router/bin/python3*
/router/bin/python3	   /router/bin/python3-3.5.0  /router/bin/python3-3.6.3  /router/bin/python3.8.2_mcpre-v1
/router/bin/python3-3.4.0  /router/bin/python3-3.6.0  /router/bin/python3.8.12

mkdir /nobackup/USERNAME/ddr-home ! where USERNAME is your username

! create python3 virtual environment using the newest python 3.8 or 3.9 version on the ADS
/router/bin/python3.8.12 -m venv ddrenv
source ddrenv/bin/activate (or activate.csh if you are running c-shell)

! clone the ddr-clips repository
cd /nobackup/USERNAME/ddr-home
git clone https://wwwin-github.cisco.com/ddr-home/ddr-clips.git

! install the pip wheels for DDR into the ddr virtual environment
cd ~/ddr-home/ddr-clips/infra/nx/ads-infra-files

python3 -m pip install pip-21.3.1-py3-none-any.whl
python3 -m pip install clips-1.1.0-py3-none-any.whl
python3 -m pip install ddr_clips-1.1.9-py3-none-any.whl
python3 -m pip install ddr_python-1.0.9-py3-none-any.whl
python3 -m pip install ncclient-0.6.9-py2.py3-none-any.whl
python3 -m pip install pexpect-4.8.0-py2.py3-none-any.whl
python3 -m pip install ptyprocess-0.7.0-py2.py3-none-any.whl
python3 -m pip install xmltodict-0.13.0-py2.py3-none-any.whl
python3 -m pip install clipspy
python3 -m pip install regex
python3 -m pip install pyyaml

